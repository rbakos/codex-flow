# Production Environment Configuration
# Copy this to .env and update with your production values

# Database Configuration
ORCH_DATABASE_URL=postgresql://postgres:CHANGEME@db:5432/orchestrator
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true
DB_ECHO_SQL=false
DB_SLOW_QUERY_THRESHOLD=1.0

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Security Configuration
ORCH_SECRET_KEY=CHANGEME_USE_STRONG_RANDOM_KEY
ORCH_JWT_SECRET_KEY=CHANGEME_USE_DIFFERENT_STRONG_KEY
ORCH_JWT_ALGORITHM=HS256
ORCH_ACCESS_TOKEN_EXPIRE_MINUTES=30
ORCH_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ORCH_CORS_ORIGINS=https://app.example.com,https://api.example.com
ORCH_CORS_ALLOW_CREDENTIALS=true
ORCH_CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH
ORCH_CORS_ALLOW_HEADERS=*

# Rate Limiting
ORCH_RATE_LIMIT_PER_MIN=100
ORCH_RATE_LIMIT_BURST=20

# Approval Policy
ORCH_REQUIRE_APPROVAL=true

# Scheduler Configuration
ORCH_SCHEDULER_BACKGROUND_INTERVAL=5
ORCH_MAX_RETRIES=3
ORCH_BACKOFF_BASE_SECONDS=60
ORCH_BACKOFF_JITTER_SECONDS=10

# OpenAI Configuration (optional)
ORCH_ENABLE_OPENAI_PLANNER=false
OPENAI_API_KEY=
ORCH_OPENAI_MODEL=gpt-4o-mini
ORCH_OPENAI_BASE_URL=

# Agent Configuration
AGENT_INTERVAL=2.0
AGENT_TICK_INTERVAL=1.0
AGENT_HEARTBEAT_INTERVAL=10.0
AGENT_CLAIM_TTL=300
AGENT_SECRET_KEY=CHANGEME_SHARED_WITH_ORCH_SECRET_KEY
AGENT_ENABLE_LLM_PLANNING=false
AGENT_ALLOW_OPENAI_FALLBACK=false

# Monitoring & Observability
ENVIRONMENT=production
LOG_LEVEL=INFO
LOG_FILE=/var/log/codex-orchestrator/app.log
SENTRY_DSN=
JAEGER_HOST=jaeger
JAEGER_PORT=6831
PROMETHEUS_PORT=9090

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# External Services
AWS_DEFAULT_REGION=us-east-1
GOOGLE_CLOUD_PROJECT=
AZURE_SUBSCRIPTION_ID=

# Application Configuration
APP_NAME=codex-orchestrator
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=4
APP_RELOAD=false

# SSL/TLS Configuration
SSL_CERT_FILE=/etc/ssl/certs/server.crt
SSL_KEY_FILE=/etc/ssl/private/server.key
SSL_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=codex-backups

# Feature Flags
FEATURE_ASYNC_API=true
FEATURE_WEBSOCKET_LOGS=true
FEATURE_ARTIFACT_UPLOAD=true
FEATURE_INFO_REQUESTS=true